# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"


# move currenty focused windown to selected workspace
# or move whole workspace to other display
mode "move_to" {
        # move focused container to workspace
        bindsym 1 move container to workspace number 1
        bindsym 2 move container to workspace number 2
        bindsym 3 move container to workspace number 3
        bindsym 4 move container to workspace number 4
        bindsym 5 move container to workspace number 5
        bindsym 6 move container to workspace number 6
        bindsym 7 move container to workspace number 7
        bindsym 8 move container to workspace number 8
        bindsym 9 move container to workspace number 9
        bindsym 0 move container to workspace number 10

        # 11-20
        bindsym Shift+1 move container to workspace number 11
        bindsym Shift+2 move container to workspace number 12
        bindsym Shift+3 move container to workspace number 13
        bindsym Shift+4 move container to workspace number 14
        bindsym Shift+5 move container to workspace number 15
        bindsym Shift+6 move container to workspace number 16
        bindsym Shift+7 move container to workspace number 17
        bindsym Shift+8 move container to workspace number 18
        bindsym Shift+9 move container to workspace number 19
        bindsym Shift+0 move container to workspace number 20

        # move to other display
        bindsym Left  exec --no-startup-id ~/.i3/scripts/move_workspace_display.py
        bindsym Right  exec --no-startup-id ~/.i3/scripts/move_workspace_display.py
        bindsym m  exec --no-startup-id ~/.i3/scripts/move_workspace_display.py


         # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+m mode "move_to"

# external display

mode "HDMI Left-Right-(O)ff" {
    bindsym Right exec bash -c "xrandr --output HDMI1 --right-of LVDS1 --auto"
    bindsym Left exec bash -c "xrandr --output HDMI1 --left-of LVDS1 --auto"
    bindsym o exec bash -c "xrandr --output HDMI1 --off"
    bindsym q exec bash -c "xrandr --output HDMI1 --off"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Control+d mode "HDMI Left-Right-(O)ff"


# kill windows
mode "kill" {
        bindsym q kill
        bindsym x kill

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+q mode "kill"

set $mode_power power (l)ock (e)xit (s)uspend (r)eboot (p)oweroff )
mode "$mode_power" {
    bindsym l mode "default", exec --no-startup-id i3lock -c 000000
    bindsym e mode "default", exec --no-startup-id i3-msg exit
    bindsym s mode "default", exec --no-startup-id systemctl suspend
    bindsym r mode "default", exec --no-startup-id systemctl reboot
    bindsym p mode "default", exec --no-startup-id systemctl poweroff
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Control+p mode "$mode_power"

mode "volume (Up/Down) (m)ute" {
        bindsym Down exec amixer set Master 5%-
        bindsym Up exec amixer set Master 5%+
        bindsym m exec ~/local/scripts/mute.sh
        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Control+v mode "volume (Up/Down) (m)ute"

mode "backlight (Up/Down)" {
        # brightness control (Alt + F4 or Alt + F5)
        bindsym Down exec xbacklight - 10
        bindsym Up exec xbacklight + 10

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Control+b mode "backlight (Up/Down)"





